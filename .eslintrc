{
  "extends": "eslint:recommended",
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2020
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "root": true,
  "rules": {
    "no-cond-assign": 0,
    "no-constant-condition": 0,
    "no-unexpected-multiline": 0,
    "comma-dangle": ["error", "never"],
    "semi": [2, "always"]
  }
}
